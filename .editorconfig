# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
max_line_length = 140
trim_trailing_whitespace = true
end_of_line = lf

[{*.md,*.mdx}]
max_line_length = off
trim_trailing_whitespace = false

[*.sql]
max_line_length = off

[*.java]
indent_size = 4
